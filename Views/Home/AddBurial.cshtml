@model Official

<h2>Add Burial Record</h2>

<form asp-action="AddBurial" method="post">
    <div>
        <label asp-for="BurialId1">Burial Location (<i>ex: N 190 E 30 NE 35</i>)</label>
        <input asp-for="BurialId1" /><br />
    </div>
    <div>
        <label asp-for="BurialDepth">Burial Depth</label>
        <input asp-for="BurialDepth" /><br />
    </div>
    <div>
        <label asp-for="YearExcav">Year Excavated</label>
        <input asp-for="YearExcav" /><br />
    </div>
    <div>
        <label asp-for="Burialageatdeath">Age at Death</label> <!--Should it be age of skull?-->
        <input asp-for="Burialageatdeath" /><br />
    </div>
    <div>
        <label asp-for="Burialsamalepletaken">Sample Taken</label>
        <input asp-for="Burialsamalepletaken" /><br />
    </div>
    <div>
        <label asp-for="PreservationIndex">Preservation Index</label>
        <input asp-for="PreservationIndex" /><br />
    </div>
    <div>
        <label asp-for="Description">Description</label>
        <input asp-for="Description" /><br />
    </div>
    <div>
        <label asp-for="BurialSituationNotes">Situation Notes</label>
        <input asp-for="BurialSituationNotes" /><br />
    </div>
    <div>
        <label asp-for="HairColor">Hair Color</label>
        <input asp-for="HairColor" /><br />
    </div>
    <div>
        <label asp-for="EstimaleateLivingStature">Estimated Living Stature</label>
        <input asp-for="EstimaleateLivingStature" /><br />
    </div>
    <div>
        <label asp-for="BurialPreservation">Burial Preservation</label>
        <input asp-for="BurialPreservation" /><br />
    </div>
    <div>
        <label asp-for="GenderGe">Gender</label>
        <select asp-for="GenderGe">
            <option value=""></option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Undetermined">Undetermined</option>
        </select>
    </div>
    <br /><br />
    
    <div asp-validation-summary="All"></div>

    <button class="btn btn-group-sm btn-secondary"type="submit">Submit</button>

</form>
